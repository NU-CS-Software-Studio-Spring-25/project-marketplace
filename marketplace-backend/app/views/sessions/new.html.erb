<div class="border d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card p-4 d-flex" style="width: 35rem; height: 30rem;">
        <h1 class="title-course text-center mt-3">welcome to<br>course marketplace</h1>
        <h2 class="title-course text-center fs-3">sign in</h2>
        <% if flash[:alert] %>
            <div class="alert alert-danger"><%= flash[:alert] %></div>
        <% end %>
        <div class="d-flex justify-content-center"> 
            <%= form_with url: login_path, method: :post, local: true, class:"needs_validation w-100" do |f| %>
                <div class="mt-3 mb-3">
                    <%= f.label :email, class: "form-label" %>
                    <%= f.email_field :email, class: "form-control", required: true %>
                </div>
                <div class="mb-3">
                    <%= f.label :password, class: "form-label" %>
                    <div class="input-group">
                        <%= f.password_field :password, class: "form-control", required: true, id: "password-input" %>
                        <button type="button" class="btn btn-outline-secondary" id="toggle-password">
                            Show
                        </button>
                    </div>
                </div>
                <div class="d-flex justify-content-center align-items-center gap-2 mt-3">
                    <%= f.submit "Login", class: "btn btn-info" %>
                    <span>or</span>
                    <a href="/auth/google_oauth2" class="btn btn-danger">
                        <i class="bi bi-google"></i> Sign in with Google
                    </a>
              </div>
            <% end %>
        </div>
    </div>
</div>