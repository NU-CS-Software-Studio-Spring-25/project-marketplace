<div class="container mt-4">
  <h1 class="text-center mb-5" style="color: var(--hinge-primary); font-weight: 700;">@course-catalog</h1>
  
  <div class="mb-4 text-center">
    <%= link_to new_course_path, class: "btn-hinge-primary" do %>
      <i class="fa-solid fa-plus me-2"></i>Add New Course
    <% end %>
  </div>

  <div class="card card-hinge mb-4">
    <div class="card-body-hinge">
      <h5 class="card-title mb-3">Filter Courses</h5>
      <%= form_with url: courses_path, method: :get, class: "row g-3", data: { controller: "filter" } do |f| %>
        <div class="col-md-4">
          <%= f.label :label_ids, "Labels", class: "form-label" %>
          <%= f.collection_select :label_ids, Label.all, :id, :display_name, 
              { include_blank: "All Labels" }, 
              { multiple: true, class: "form-select" } %>
        </div>
        
        <div class="col-md-4">
          <%= f.label :quarter_ids, "Quarters", class: "form-label" %>
          <%= f.collection_select :quarter_ids, Quarter.all, :id, :name, 
              { include_blank: "All Quarters" }, 
              { multiple: true, class: "form-select" } %>
        </div>
        
        <div class="col-md-4">
          <%= f.label :instructor_ids, "Instructors", class: "form-label" %>
          <%= f.collection_select :instructor_ids, Instructor.all, :id, :name, 
              { include_blank: "All Instructors" }, 
              { multiple: true, class: "form-select" } %>
        </div>

        <div class="col-12 mt-3">
          <%= f.submit "Apply Filters", class: "btn-hinge-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <% if params[:label_ids].present? || params[:quarter_ids].present? || params[:instructor_ids].present? %>
    <div class="alert alert-info mb-4">
      <h6>Active Filters:</h6>
      <% if params[:label_ids].present? %>
        <p>Labels: <%= Label.where(id: params[:label_ids]).pluck(:display_name).join(", ") %></p>
      <% end %>
      <% if params[:quarter_ids].present? %>
        <p>Quarters: <%= Quarter.where(id: params[:quarter_ids]).pluck(:name).join(", ") %></p>
      <% end %>
      <% if params[:instructor_ids].present? %>
        <p>Instructors: <%= Instructor.where(id: params[:instructor_ids]).pluck(:name).join(", ") %></p>
      <% end %>
    </div>
  <% end %>

  <div class="row g-3">
    <% @courses.each do |course| %>
      <div class="">
        <div class="card card-hinge h-100">
          <div class="card-header-hinge">
            <span class="course-number-badge"><%= course.course_number %></span>
            <h3 class="course-title"><%= course.name %></h3>
            
            <% if course.labels.any? %>
              <div>
                <% course.labels.each do |label| %>
                  <span class="badge-hinge"><%= label.display_name %></span>
                <% end %>
              </div>
            <% end %>
          </div>
          
          <div class="card-body-hinge">
            <% if course.description.present? %>
              <p><%= course.description.truncate(100) %></p>
            <% end %>
            
            <div class="d-flex justify-content-between align-items-center mt-3">
              <%= link_to course_path(course), class: "btn-hinge-outline" do %>
                <i class="fa-solid fa-circle-info me-1"></i> Details
              <% end %>
              
              <div class="d-flex gap-3">
                <%= link_to edit_course_path(course), class: "btn btn-outline-secondary" do %>
                  <i class="fa-solid fa-pen-to-square"></i>
                <% end %>
                
                <%= button_to course, method: :delete, class: "btn btn-outline-danger", 
                  form: { data: { turbo_confirm: "Are you sure you want to delete this course?" }, class: "d-inline" } do %>
                  <i class="fa-solid fa-trash"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>