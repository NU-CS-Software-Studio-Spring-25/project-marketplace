<div class="container mt-4">
  <h1 class="text-center mb-5" style="color: var(--hinge-primary); font-weight: 700;">@course-catalog</h1>
  
  <div class="mb-4 text-center">
    <%= link_to new_course_path, class: "btn-hinge-primary" do %>
      <i class="fa-solid fa-plus me-2"></i>Add New Course
    <% end %>
  </div>

  <div class="mb-4 text-center">
    <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse" aria-expanded="false" aria-controls="filterCollapse">
      Filter Courses
    </button>
  </div>

  <div class="collapse mb-4" id="filterCollapse">
    <div class="card card-hinge">
      <div class="card-body-hinge">
        <h5 class="card-title mb-3">Filter Courses</h5>
        <%= form_with url: courses_path, method: :get, class: "row g-3", data: { controller: "filter" } do |f| %>
          <div class="mb-3">
            <strong>Labels</strong>
            <div class="d-flex flex-wrap gap-3">
              <% Label.all.each do |label| %>
                <div class="form-check form-check-inline">
                  <%= check_box_tag "label_ids[]", label.id, Array(params[:label_ids]).map(&:to_s).include?(label.id.to_s), id: "label_{label.id}", class: "form-check-input" %>
                  <%= label_tag "label_{label.id}", label.display_name, class: "form-check-label" %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="mb-3">
            <strong>Quarters</strong>
            <div class="d-flex flex-wrap gap-3">
              <% Quarter.all.each do |quarter| %>
                <div class="form-check form-check-inline">
                  <%= check_box_tag "quarter_ids[]", quarter.id, Array(params[:quarter_ids]).map(&:to_s).include?(quarter.id.to_s), id: "quarter_{quarter.id}", class: "form-check-input" %>
                  <%= label_tag "quarter_{quarter.id}", quarter.name, class: "form-check-label" %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="mb-3">
            <strong>Instructors</strong>
            <div class="d-flex flex-wrap gap-3">
              <% Instructor.all.each do |instructor| %>
                <div class="form-check form-check-inline">
                  <%= check_box_tag "instructor_ids[]", instructor.id, Array(params[:instructor_ids]).map(&:to_s).include?(instructor.id.to_s), id: "instructor_{instructor.id}", class: "form-check-input" %>
                  <%= label_tag "instructor_{instructor.id}", instructor.name, class: "form-check-label" %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-12 mt-3 d-flex gap-2">
            <%= f.submit "Apply Filters", class: "btn-hinge-primary" %>
            <%= link_to "Reset Filters", courses_path, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <% label_ids = Array(params[:label_ids]).reject(&:blank?) %>
  <% quarter_ids = Array(params[:quarter_ids]).reject(&:blank?) %>
  <% instructor_ids = Array(params[:instructor_ids]).reject(&:blank?) %>

  <% if label_ids.any? || quarter_ids.any? || instructor_ids.any? %>
    <div class="alert alert-info mb-4">
      <h6>Active Filters:</h6>
      <% if label_ids.any? %>
        <p>Labels: <%= Label.where(id: label_ids).pluck(:display_name).join(", ") %></p>
      <% end %>
      <% if quarter_ids.any? %>
        <p>Quarters: <%= Quarter.where(id: quarter_ids).pluck(:name).join(", ") %></p>
      <% end %>
      <% if instructor_ids.any? %>
        <p>Instructors: <%= Instructor.where(id: instructor_ids).pluck(:name).join(", ") %></p>
      <% end %>
    </div>
  <% end %>

  <div class="row g-3">
    <% @courses.each do |course| %>
      <div class="">
        <div class="card card-hinge h-100">
          <div class="card-header-hinge">
            <span class="course-number-badge"><%= course.course_number %></span>
            <h3 class="course-title"><%= course.name %></h3>
            
            <% if course.labels.any? %>
              <div>
                <% course.labels.each do |label| %>
                  <span class="badge-hinge"><%= label.display_name %></span>
                <% end %>
              </div>
            <% end %>
          </div>
          
          <div class="card-body-hinge">
            <% if course.description.present? %>
              <p><%= course.description.truncate(100) %></p>
            <% end %>
            
            <div class="d-flex justify-content-between align-items-center mt-3">
              <%= link_to course_path(course), class: "btn-hinge-outline" do %>
                <i class="fa-solid fa-circle-info me-1"></i> Details
              <% end %>
              
              <div class="d-flex gap-3">
                <%= link_to edit_course_path(course), class: "btn btn-outline-secondary" do %>
                  <i class="fa-solid fa-pen-to-square"></i>
                <% end %>
                
                <%= button_to course, method: :delete, class: "btn btn-outline-danger", 
                  form: { data: { turbo_confirm: "Are you sure you want to delete this course?" }, class: "d-inline" } do %>
                  <i class="fa-solid fa-trash"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>